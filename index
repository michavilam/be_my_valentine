    <script>
        let nivelNo = 0;
        const preguntas = [
            'Â¿Quieres ser mi San Valentin?',
            'Â¿Segurisimo?',
            'Â¿Segurisisisimo?',
            'Â¿Enserio nooo? ðŸ¥º',
            'Ultimo chance'
        ];
                       
        function respuestaSi() {
            const response = document.getElementById('response');
            const h1 = document.querySelector('h1');
            const heart = document.querySelector('.heart');

            // Ocultar la pregunta y el corazÃ³n
            h1.style.display = 'none';
            heart.style.display = 'none';
            response.innerHTML = 'Siii! SabÃ­a que dirÃ­as que si, obvi ðŸ˜Œ<br><br>Te amoooo!ðŸ©µ';
            response.style.display = 'block';
            response.style.fontSize = '2em';
            
           
            document.querySelector('.buttons').style.display = 'none';
            
            
            crearConfeti();
        }
        
        function respuestaNo() {
            nivelNo++;
            const h1 = document.querySelector('h1');
            const btnNo = document.querySelector('.btn-no');
            
            if (nivelNo < preguntas.length) {
                h1.textContent = preguntas[nivelNo];
                // Hacer el botÃ³n No mÃ¡s pequeÃ±o cada vez
                btnNo.style.transform = `scale(${1 - (nivelNo * 0.2)})`;
            } else {
                // Desaparecer el botÃ³n de No completamente
                h1.textContent = 'Upsi, creo que solo queda una opciÃ³n';
                btnNo.style.display = 'none';
            }
        }
    
        function crearConfeti() {
            const emojis = ['ðŸ’•', 'ðŸ©µ', 'ðŸ’—', 'â¤ï¸'];
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.textContent = emojis[Math.floor(Math.random() * emojis.length)];
                    heart.style.position = 'fixed';
                    heart.style.left = Math.random() * 100 + '%';
                    heart.style.top = '-50px';
                    heart.style.fontSize = Math.random() * 30 + 20 + 'px';
                    heart.style.transition = 'all 3s ease-in';
                    heart.style.pointerEvents = 'none';
                    heart.style.zIndex = '1000';
                    document.body.appendChild(heart);
                    
                    setTimeout(() => {
                        heart.style.top = '100vh';
                        heart.style.opacity = '0';
                    }, 10);
                    
                    setTimeout(() => {
                        heart.remove();
                    }, 3000);
                }, i * 100);
            }
        }
    </script>
